{
  "name": "saas-starter-with-monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "bust-root-cache": "rm -rf .turbo ./node_modules/.cache",
    "check-deps": "manypkg check",
    "clean": "pnpm bust-root-cache && turbo run clean --log-order=grouped",
    "db:generate": "turbo -F @saas-starter-with-monorepo/db db:generate",
    "db:migrate": "turbo -F @saas-starter-with-monorepo/db db:migrate",
    "db:push": "turbo -F @saas-starter-with-monorepo/db db:push",
    "db:studio": "turbo -F @saas-starter-with-monorepo/db db:studio",
    "delete-node-modules": "pnpm exec rm -rf node_modules && pnpm -r exec rm -rf node_modules",
    "dev": "turbo run dev",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo web#dev",
    "diagnostics:pnpm-doctor": "pnpm doctor",
    "diagnostics:turbo-devtools": "turbo devtools",
    "format:check": "prettier --check --experimental-cli --cache --cache-location=node_modules/.cache/.prettiercache .",
    "format:write": "prettier --write --experimental-cli --cache --cache-location=node_modules/.cache/.prettiercache .",
    "lint": "turbo run lint",
    "merge-checks": "turbo run format:check typecheck lint test sheriff check-deps publint report-dead-code report-dead-code-extra build",
    "nuke": "pnpm clean && pnpm delete-node-modules",
    "publint": "turbo run publint",
    "report-dead-code": "knip --include-libs --cache",
    "report-dead-code-extra": "knip --include-libs --strict --cache",
    "rl": "pnpm troubleshooting:reset-node-modules-and-lockfile",
    "sheriff": "turbo run sheriff",
    "test": "turbo run test",
    "troubleshooting:fix-lockfile": "pnpm i --fix-lockfile",
    "troubleshooting:reset-node-modules-and-lockfile": "pnpm delete-node-modules && pnpm exec rm -rf ./pnpm-lock.yaml && pnpm i",
    "typecheck": "turbo run typecheck"
  },
  "dependencies": {
    "@prettier/plugin-oxc": "^0.1.3",
    "@saas-starter-with-monorepo/config": "workspace:*",
    "@saas-starter-with-monorepo/env": "workspace:*",
    "dotenv": "catalog:",
    "knip": "^5.80.2",
    "prettier": "^3.7.4",
    "prettier-plugin-packagejson": "catalog:",
    "turbo": "^2.6.3",
    "typescript": "catalog:",
    "zod": "catalog:"
  },
  "packageManager": "pnpm@10.27.0",
  "engines": {
    "node": ">=24.12.0",
    "pnpm": ">=10.27.0"
  },
  "devEngines": {
    "runtime": {
      "name": "node",
      "version": "^24.12.0",
      "onFail": "download"
    }
  }
}
